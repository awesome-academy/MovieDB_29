<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="actionBarStyle">@style/ActionBarBottomLine</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ActionBarBottomLine" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/background_bottom_line</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="TextHeadline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/dp_5</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextCardView" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/dp_140</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="BackgroundSection" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@drawable/background_section</item>
    </style>
</resources>
